---
interface Props {
  name: string;
  title: string;
  email: string;
  linkedin?: string;
  github?: string;
  whatsapp?: string;
  image?: string;
}

const { name, title, email, linkedin, github, whatsapp, image } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
---

<header id="header">
  <div class="header-container">
    {image && (
      <div class="header-profile">
        <img src={`${baseUrl}${image.startsWith('/') ? image.slice(1) : image}`} alt={name} />
      </div>
    )}
    <div class="header-text">
      <h1>{name}</h1>
      <h2 class="sub-title">{title}</h2>
      <ul class="social-links">
        {linkedin && (
          <li>
            <a href={`https://linkedin.com/in/${linkedin}`} target="_blank" rel="noopener" aria-label="LinkedIn">
              <i class="fab fa-linkedin-in"></i>
            </a>
          </li>
        )}
        {github && (
          <li>
            <a href={`https://github.com/${github}`} target="_blank" rel="noopener" aria-label="GitHub">
              <i class="fab fa-github"></i>
            </a>
          </li>
        )}
        {whatsapp && (
          <li>
            <a href={`https://wa.me/${whatsapp.replace(/\D/g, '')}`} target="_blank" rel="noopener" aria-label="WhatsApp">
              <i class="fab fa-whatsapp"></i>
            </a>
          </li>
        )}
        <li>
          <a href={`mailto:${email}`} aria-label="Email">
            <i class="fas fa-envelope"></i>
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>

<style>
  #header {
    min-height: auto;
    padding: var(--space-lg) var(--space-md);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
    overflow: hidden;
  }

  #header::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 20% 40%, rgba(201,162,39,0.08) 0%, transparent 50%),
      radial-gradient(ellipse 60% 60% at 80% 20%, rgba(212,163,115,0.1) 0%, transparent 50%);
  }

  .header-container {
    position: relative;
    z-index: 2;
    max-width: 1000px;
    width: 100%;
    padding: var(--space-md) var(--space-lg);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
  }

  .header-profile {
    position: absolute;
    top: var(--space-sm);
    right: var(--space-md);
    z-index: 10;
  }

  .header-profile img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--gold);
    box-shadow: 0 4px 16px rgba(0,0,0,0.3);
    transition: box-shadow 0.3s ease;
  }

  .header-profile img:hover {
    box-shadow: 0 6px 24px rgba(0,0,0,0.4);
  }

  .header-text {
    flex: 1;
    min-width: 280px;
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    font-weight: 400;
    letter-spacing: 0.03em;
    line-height: 1.2;
    color: #fff;
    margin-bottom: 0.25rem;
  }

  h1::after {
    content: '';
    display: block;
    width: 40px;
    height: 2px;
    background: var(--gold);
    margin: var(--space-xs) auto 0;
  }

  .sub-title {
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #d4a373;
    margin-top: var(--space-xs);
    margin-bottom: var(--space-sm);
    display: inline-block;
    padding: 0.375rem 1rem;
    border: 1px solid rgba(212, 163, 115, 0.3);
    border-radius: 3px;
    background: rgba(255, 255, 255, 0.03);
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: var(--space-xs);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .social-links li {
    display: inline-flex;
    margin: 0;
    padding: 0;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: transparent;
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 50%;
    color: rgba(255,255,255,0.8);
    font-size: 1.1rem;
    transition: all 0.4s var(--ease-out);
    text-decoration: none;
  }

  .social-links a:hover {
    background: var(--gold);
    border-color: var(--gold);
    color: var(--ink);
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(201,162,39,0.3);
  }

  @media (max-width: 768px) {
    #header {
      padding: var(--space-lg) var(--space-md) var(--space-md);
    }

    .header-container {
      padding: var(--space-md) var(--space-sm);
    }

    .header-profile {
      top: var(--space-sm);
      right: var(--space-sm);
    }

    .header-profile img {
      width: 55px;
      height: 55px;
    }

    .header-text {
      padding-right: 65px;
      max-width: calc(100% - 70px);
    }

    h1 {
      font-size: clamp(1.25rem, 5vw, 1.75rem);
    }

    h1::after {
      width: 35px;
    }

    .sub-title {
      font-size: 0.65rem;
    }

    .social-links a {
      width: 40px;
      height: 40px;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .header-profile img {
      width: 45px;
      height: 45px;
    }

    .header-text {
      padding-right: 55px;
      max-width: calc(100% - 55px);
    }

    h1 {
      font-size: clamp(1.1rem, 4.5vw, 1.375rem);
    }

    .sub-title {
      font-size: 0.55rem;
    }

    .social-links a {
      width: 36px;
      height: 36px;
      font-size: 0.8rem;
    }
  }
</style>
